<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for SmartHat - Night mode -->
    <style name="SmartHat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- Text appearance styles optimized for dark mode on Pixel 4a OLED display -->
    
    <!-- Title text style with better contrast for dark mode -->
    <style name="TextAppearance.SmartHat.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>
    
    <!-- Subtitle text style with better contrast for dark mode -->
    <style name="TextAppearance.SmartHat.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Body text style with better readability for dark mode -->
    <style name="TextAppearance.SmartHat.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.0125</item>
    </style>
    
    <!-- Metric value text style with enhanced visibility for dark mode -->
    <style name="TextAppearance.SmartHat.MetricValue" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Alert text style for high contrast in dark mode -->
    <style name="TextAppearance.SmartHat.Alert" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/error_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>

    <!-- Theme overlay for dynamic colors optimization on Pixel 4a OLED screens in dark mode -->
    <style name="ThemeOverlay.SmartHat.DynamicColors" parent="">
        <!-- True black for OLED power saving -->
        <item name="android:colorBackground" type="color">@color/background_oled</item>
        <item name="colorSurface" type="color">@color/surface_oled</item>
        
        <!-- Material You dynamic color adjustments for Android 12+ dark mode -->
        <item name="colorPrimaryFixed">?attr/colorPrimary</item>
        <item name="colorPrimaryFixedDim">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimaryFixed">?attr/colorOnPrimary</item>
        <item name="colorOnPrimaryFixedVariant">?attr/colorOnPrimaryContainer</item>
        
        <!-- Optimize contrast ratios for Pixel 4a OLED display -->
        <item name="colorSurfaceContainer" type="color">@color/surface_oled</item>
        <item name="colorSurfaceContainerLow" type="color">@color/surface_oled</item>
        <item name="colorSurfaceContainerLowest" type="color">@color/surface_oled</item>
        <item name="colorSurfaceContainerHigh" type="color">@color/surface_variant_oled</item>
        <item name="colorSurfaceContainerHighest" type="color">@color/surface_variant_oled</item>
        
        <!-- Higher contrast for text on dark surfaces -->
        <item name="android:textColorPrimary" type="color">@color/on_surface_dark</item>
        <item name="android:textColorSecondary" type="color">@color/on_surface_variant_dark</item>
        
        <!-- Material You specific attributes for Android 12+ -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/elevation_overlay_1</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="PopupMenu.SmartHat" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/card_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Popup Menu Overflow Style -->
    <style name="PopupMenuOverflow.SmartHat" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/card_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Activity Toolbar Style -->
    <style name="SmartHat.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="titleTextColor">@color/primary</item>
        <item name="navigationIconTint">@color/primary</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Section Header Style -->
    <style name="SmartHat.SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="SmartHat.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/surface_variant_dark</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/primary_dark</item>
    </style>

    <!-- Button Style -->
    <style name="SmartHat.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary_dark</item>
        <item name="android:textColor">@color/on_primary_dark</item>
        <item name="rippleColor">@color/primary_container_dark</item>
    </style>

    <!-- Toggle Style -->
    <style name="SmartHat.SwitchCompat" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/primary_dark</item>
        <item name="trackTint">@color/primary_container_dark</item>
    </style>

    <!-- Slider Style -->
    <style name="SmartHat.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/primary_dark</item>
        <item name="trackColorActive">@color/primary_dark</item>
        <item name="trackColorInactive">@color/surface_variant_dark</item>
        <item name="haloColor">@color/primary_container_dark</item>
    </style>
</resources> 
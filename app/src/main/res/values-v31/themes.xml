<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for Android 12+ (API 31+) -->
    <style name="Theme.SmartHat" parent="Theme.Material3.DayNight">
        <!-- Use dynamic colors but with our palette as fallback for older Android versions -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        
        <!-- Secondary colors with fallbacks -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        
        <!-- Full edge-to-edge experience optimized for Pixel 4a -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        
        <!-- Semi-transparent status and navigation bars for modern look -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        
        <!-- Set window light status bar based on theme mode -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmartHat.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SmartHat.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SmartHat.LargeComponent</item>
        
        <!-- Enable elevation overlays for Pixel 4a -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/surface</item>
    </style>
    
    <!-- No action bar theme for Android 12+ -->
    <style name="Theme.SmartHat.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Use dynamic colors but with our palette as fallback for older Android versions -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        
        <!-- Secondary colors with fallbacks -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/secondary_container</item>
        <item name="colorOnSecondaryContainer">@color/on_secondary_container</item>
        
        <!-- Full edge-to-edge experience optimized for Pixel 4a -->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        
        <!-- Semi-transparent status and navigation bars for modern look -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        
        <!-- Set window light status bar based on theme mode -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        
        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmartHat.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SmartHat.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SmartHat.LargeComponent</item>
        
        <!-- Enable elevation overlays for Pixel 4a -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/surface</item>
    </style>
    
    <!-- Import shape styles from base theme -->
    <style name="ShapeAppearance.SmartHat.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="ShapeAppearance.SmartHat.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.SmartHat.LargeComponent" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
    
    <!-- Theme overlay for dynamic colors optimized for Pixel 4a OLED -->
    <style name="ThemeOverlay.SmartHat.DynamicColors" parent="">
        <!-- Optimize dark surfaces for OLED displays on Pixel 4a -->
        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorOnSurface">@android:color/system_neutral1_50</item>
        <item name="android:colorBackground">@android:color/system_neutral1_900</item>
        <item name="colorOnBackground">@android:color/system_neutral1_50</item>
    </style>
</resources> 
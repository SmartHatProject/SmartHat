<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base light theme for Android 13+ with advanced features -->
    <style name="Theme.SmartHat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Standard Material You colors from v31+ -->
        <item name="android:colorPrimary">@android:color/system_accent1_600</item>
        <item name="android:colorPrimaryDark">@android:color/system_accent1_800</item>
        <item name="android:colorAccent">@android:color/system_accent1_600</item>
        <item name="colorPrimary">@android:color/system_accent1_600</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_800</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_50</item>
        
        <!-- Background and surfaces -->
        <item name="android:colorBackground">@android:color/system_neutral1_50</item>
        <item name="android:navigationBarColor">@android:color/system_neutral1_50</item>
        <item name="android:statusBarColor">@android:color/system_accent1_800</item>
        <item name="colorSurface">@android:color/system_neutral1_50</item>
        <item name="colorOnSurface">@android:color/system_neutral1_900</item>
        
        <!-- Android 13+ specific flags for enhanced user experience -->
        <item name="android:enableOnBackInvokedCallback">true</item> <!-- Predictive back gesture -->
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Better Material 3 integration with harmonized colors -->
        <item name="colorSecondary">@android:color/system_accent2_600</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_700</item>
        <item name="colorOnSecondary">@android:color/system_neutral1_50</item>
        <item name="colorTertiary">@android:color/system_accent3_600</item>
        <item name="colorOnTertiary">@android:color/system_neutral1_50</item>
        
        <!-- Error colors -->
        <item name="colorError">@android:color/system_error_600</item>
        <item name="colorOnError">@android:color/system_neutral1_50</item>
        
        <!-- Surface variants for cards and elevated surfaces -->
        <item name="colorSurfaceVariant">@android:color/system_neutral2_100</item>
        <item name="colorOnSurfaceVariant">@android:color/system_neutral2_700</item>
    </style>
    

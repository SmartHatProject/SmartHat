<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme using Material Components to ensure compatibility -->
    <style name="Theme.SmartHat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>
        
        <!-- Background colors. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:navigationBarColor">@color/surface</item>
        
        <!-- Shape customization -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.SmartHat.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.SmartHat.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.SmartHat.LargeComponent</item>
    </style>
    
    <!-- Shape appearances for components -->
    <style name="ShapeAppearance.SmartHat.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
    
    <style name="ShapeAppearance.SmartHat.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <style name="ShapeAppearance.SmartHat.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
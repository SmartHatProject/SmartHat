<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for SmartHat -->
    <style name="SmartHat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/secondary</item>
    </style>

    <!-- Theme overlay for dynamic colors optimization on Pixel 4a -->
    <style name="ThemeOverlay.SmartHat.DynamicColors" parent="">
        <!-- Override dynamic colors tones for better OLED contrast -->
        <item name="colorPrimaryInverse" type="color">@color/primary</item>
        
        <!-- Material You dynamic color adjustments for Android 12+ -->
        <item name="colorPrimaryFixed">@color/secondary</item>
        <item name="colorPrimaryFixedDim">@color/purple_700</item>
        <item name="colorOnPrimaryFixed">?attr/colorOnPrimary</item>
        <item name="colorOnPrimaryFixedVariant">?attr/colorOnPrimaryContainer</item>
        
        <!-- Optimize contrast ratios for Pixel 4a OLED display -->
        <item name="colorSurfaceContainer" type="color">@color/surface</item>
        <item name="colorSurfaceContainerLow" type="color">@color/surface</item>
        <item name="colorSurfaceContainerHigh" type="color">@color/surface_variant</item>
        <item name="colorSurfaceContainerLowest" type="color">@color/surface</item>
        <item name="colorSurfaceContainerHighest" type="color">@color/surface_variant</item>
        
        <!-- Ensure text remains readable on all surfaces -->
        <item name="android:textColorPrimary" type="color">@color/on_surface</item>
        <item name="android:textColorSecondary" type="color">@color/on_surface_variant</item>
        
        <!-- Material You specific attributes for Android 12+ -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/surface</item>
    </style>

    <!-- Activity Toolbar Style -->
    <style name="SmartHat.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.Material3.Light</item>
        <item name="titleTextColor">@color/primary</item>
        <item name="navigationIconTint">@color/primary</item>
        <item name="elevation">4dp</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="PopupMenu.SmartHat" parent="Widget.Material3.PopupMenu">
        <item name="android:popupBackground">@color/card_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Popup Menu Overflow Style -->
    <style name="PopupMenuOverflow.SmartHat" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/card_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <!-- Section Header Style -->
    <style name="SmartHat.SectionHeader">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Card Style -->
    <style name="SmartHat.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#E0E0E0</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Button Style -->
    <style name="SmartHat.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="rippleColor">@color/primary_light</item>
    </style>

    <!-- Toggle Style -->
    <style name="SmartHat.SwitchCompat" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/primary_light</item>
    </style>

    <!-- Slider Style -->
    <style name="SmartHat.Slider" parent="Widget.Material3.Slider">
        <item name="thumbColor">@color/primary</item>
        <item name="trackColorActive">@color/primary</item>
        <item name="trackColorInactive">#E0E0E0</item>
        <item name="haloColor">@color/primary_light</item>
    </style>
</resources> 
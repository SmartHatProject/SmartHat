<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base dark theme for Android 12+ (API 31+) with dynamic color enabled -->
    <style name="Theme.SmartHat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Enable dynamic colors on Android 12+ - always false for dark theme status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Use dynamic colors when available (Material You) - dark theme variants -->
        <item name="android:colorPrimary">@android:color/system_accent1_100</item>
        <item name="android:colorPrimaryDark">@android:color/system_accent1_300</item>
        <item name="android:colorAccent">@android:color/system_accent1_100</item>
        <item name="colorPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_300</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>
        
        <!-- Use true black background for OLED screens on Pixel 4a -->
        <item name="android:colorBackground">@android:color/system_neutral1_900</item>
        <item name="android:navigationBarColor">@android:color/system_neutral1_900</item>
        <item name="android:statusBarColor">@android:color/system_neutral1_900</item>
        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorOnSurface">@android:color/system_neutral1_100</item>
        <item name="colorSurfaceVariant">@android:color/system_neutral2_800</item>
        <item name="colorOnSurfaceVariant">@android:color/system_neutral2_200</item>
        
        <!-- Add more Material You dynamic color mappings -->
        <item name="colorSecondary">@android:color/system_accent2_100</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_neutral2_900</item>
        
        <!-- Error colors -->
        <item name="colorError">@android:color/system_error_100</item>
        <item name="colorOnError">@android:color/system_neutral1_900</item>
        
        <!-- Material 3 specific attributes optimized for Pixel 4a OLED screen -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@android:color/system_neutral1_800</item>
        
        <!-- Using public Material ripple resources instead of private ones -->
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
        <item name="android:selectableItemBackgroundBorderless">?attr/selectableItemBackgroundBorderless</item>
    </style>
    
    <!-- No action bar theme variant for Android 12+ dark theme -->
    <style name="Theme.SmartHat.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Enable dynamic colors on Android 12+ - always false for dark theme status bar -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Use dynamic colors when available (Material You) - dark theme variants -->
        <item name="android:colorPrimary">@android:color/system_accent1_100</item>
        <item name="android:colorPrimaryDark">@android:color/system_accent1_300</item>
        <item name="android:colorAccent">@android:color/system_accent1_100</item>
        <item name="colorPrimary">@android:color/system_accent1_100</item>
        <item name="colorPrimaryVariant">@android:color/system_accent1_300</item>
        <item name="colorOnPrimary">@android:color/system_neutral1_900</item>
        
        <!-- Use true black background for OLED screens on Pixel 4a -->
        <item name="android:colorBackground">@android:color/system_neutral1_900</item>
        <item name="android:navigationBarColor">@android:color/system_neutral1_900</item>
        <item name="android:statusBarColor">@android:color/system_neutral1_900</item>
        <item name="colorSurface">@android:color/system_neutral1_900</item>
        <item name="colorOnSurface">@android:color/system_neutral1_100</item>
        <item name="colorSurfaceVariant">@android:color/system_neutral2_800</item>
        <item name="colorOnSurfaceVariant">@android:color/system_neutral2_200</item>
        
        <!-- Add more Material You dynamic color mappings -->
        <item name="colorSecondary">@android:color/system_accent2_100</item>
        <item name="colorSecondaryVariant">@android:color/system_accent2_200</item>
        <item name="colorOnSecondary">@android:color/system_neutral2_900</item>
        
        <!-- Error colors -->
        <item name="colorError">@android:color/system_error_100</item>
        <item name="colorOnError">@android:color/system_neutral1_900</item>
        
        <!-- Material 3 specific attributes optimized for Pixel 4a OLED screen -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@android:color/system_neutral1_800</item>
        
        <!-- Using public Material ripple resources instead of private ones -->
        <item name="android:selectableItemBackground">?attr/selectableItemBackground</item>
        <item name="android:selectableItemBackgroundBorderless">?attr/selectableItemBackgroundBorderless</item>
    </style>
</resources> 
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        
        <!-- Icon based on sensor type - will be dynamically set -->
        <ImageView
            android:id="@+id/iv_sensor_icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:padding="4dp"
            android:src="@android:drawable/ic_menu_compass"
            android:tint="#73757F" />
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            
            <!-- Sensor type and value -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_sensor_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Dust Sensor"
                    android:textColor="#071353"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_sensor_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="monospace"
                    android:gravity="end"
                    android:text="75.0 µg/m³"
                    android:textColor="#F44336"
                    android:textSize="18sp" />
            </LinearLayout>
            
            <!-- Date and time -->
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textColor="#757575"
                android:layout_marginTop="6dp"
                android:text="March 15, 2023 - 14:30"/>
                
            <!-- Threshold indicator -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#FDF3E5"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Exceeded threshold"
                android:textColor="#EF553A"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView> 
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Bluetooth permissions for Android 12+ (Pixel 4a) -->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN"
                     android:usesPermissionFlags="neverForLocation" />
    
    <!-- Notification permission for Android 13+ -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- Vibration for alerts -->
    <uses-permission android:name="android.permission.VIBRATE" />
    
    <!-- Foreground service permission for Android 12+ -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    
    <!-- Wake lock for better background reliability -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- BLE feature required -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="true" />

    <application
        android:name=".AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.SmartHat">

        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SmartHat.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Stress test action filter -->
            <intent-filter>
                <action android:name="com.team12.smarthat.ACTION_RUN_STRESS_TEST" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Foreground Service for maintaining BLE connection in background -->
        <service 
            android:name=".services.BleForegroundService"
            android:foregroundServiceType="connectedDevice"
            android:exported="false" />

        <!-- Threshold History Activity -->
        <activity
            android:name=".activities.ThresholdHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartHat.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Profile Activity -->
        <activity
            android:name=".activities.ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartHat.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Settings Activity -->
        <activity
            android:name=".activities.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartHat.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
            
        <!-- Data Visualization Activity -->
        <activity
            android:name=".activities.DataVisualizationActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartHat.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

    </application>
</manifest>